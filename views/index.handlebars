<div id="top-container" class="fluid-container">
  <h1 id="main-title" class="text-center">
    Encontre o cliente pelo RG
  </h1>
  <p id="main-subtitle" class="text-center">
    Catálogo de clientes Vip da Mistura Feminina
  </p>
  <form id="search-form" class="form-inline" action="/" method="get">
    <div class="form-group col-md-10">
      <input
        type="text"
        class="form-control"
        name="vip"
        id="vip"
        placeholder="Digite o documento do cliente que está buscando"
      />
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Procurar</button>
    </div>
  </form>
</div>
<main>
  <div id="vips-container" class="container">
    <div class="row">
      <div class="col-md-12">
        {{#if search}}
          <h2 id="vip-list-name">Buscando cliente com o documento: {{search}}</h2>
        {{else}}
          <h2 id="vip-list-name">Veja nossos clientes Vip</h2>
        {{/if}}
        <ul id="vip-list" class="list-group">
          {{#each vips}}
            <li class="list-group-item">
              <p>RG: {{dataValues.rg}}</p>
              <h2>{{dataValues.name}}</h2>
              <a class="btn btn-primary" href="/vips/view/{{dataValues.rg}}">Ver
                cliente</a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</main>